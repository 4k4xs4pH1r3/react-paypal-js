{
    "name": "@paypal/react-paypal-js",
    "version": "1.0.3",
    "description": "React components for the PayPal JS SDK",
    "keywords": [
        "react",
        "component",
        "paypal",
        "checkout",
        "payment"
    ],
    "main": "dist/react-paypal.node.js",
    "module": "dist/react-paypal.esm.js",
    "scripts": {
        "build": "rollup --config",
        "format": "prettier --write .",
        "lint": "eslint .",
        "test": "jest",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "deploy-storybook": "storybook-to-ghpages",
        "release": "node ./scripts/publish",
        "release:patch": "node ./scripts/publish patch",
        "release:minor": "node ./scripts/publish minor",
        "release:major": "node ./scripts/publish major"
    },
    "files": [
        "dist"
    ],
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git://github.com/paypal/react-paypal-js.git"
    },
    "dependencies": {
        "@paypal/paypal-js": "^1.0.4",
        "@paypal/sdk-constants": "^1.0.75",
        "prop-types": "^15.7.2"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-react": "^7.12.1",
        "@rollup/plugin-babel": "^5.2.1",
        "@rollup/plugin-node-resolve": "^10.0.0",
        "@rollup/plugin-replace": "^2.3.4",
        "@storybook/addon-actions": "^6.0.27",
        "@storybook/addon-essentials": "^6.0.27",
        "@storybook/addon-links": "^6.0.27",
        "@storybook/react": "^6.0.27",
        "@storybook/storybook-deployer": "^2.8.7",
        "@testing-library/react": "^11.1.0",
        "babel-jest": "^26.6.1",
        "babel-loader": "^8.1.0",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-react": "^7.21.5",
        "http-server": "^0.12.3",
        "husky": "^4.3.0",
        "jest": "^26.6.1",
        "lint-staged": "^10.5.0",
        "prettier": "^2.1.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-is": "^17.0.1",
        "rollup": "^2.32.1",
        "shelljs": "^0.8.4"
    },
    "peerDependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "eslint"
        ],
        "*.{json,css,html,md}": [
            "prettier --write"
        ]
    }
}
